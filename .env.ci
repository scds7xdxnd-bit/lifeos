# CI Environment Configuration
# This file is committed to repo; NO SECRETS here
# Owner: DevOps Team

APP_ENV=ci
DEBUG=false
TESTING=true

# Database: ephemeral for tests
DATABASE_URL=sqlite:///:memory:

# JWT (use test-only secret, NOT production)
JWT_SECRET_KEY=ci-test-secret-key-not-for-production

# Disable external services in CI
ENABLE_ML=false
ENABLE_INSIGHTS=true
ENABLE_ASSISTANT=false

# Rate limiting disabled for tests
RATELIMIT_ENABLED=false

# Worker disabled in CI tests
WORKER_ENABLED=false
WORKER_BATCH_SIZE=10
WORKER_POLL_INTERVAL=1
WORKER_MAX_ATTEMPTS=3

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=60

# Broker stub (no real broker in CI)
BROKER_URL=memory://

# CORS (permissive for tests)
CORS_ORIGINS=*

# Feature flags for CI
FEATURE_FLAG_CALENDAR_INTERPRETER=true
FEATURE_FLAG_INSIGHTS_ENGINE=true
